<h1>Users Index</h1>
<div class="d-flex">
  <% @users.each do |user| %>
    <div class="card">
      <p>First name : <%= user.first_name %></p>
      <p>Last name : <%= user.last_name %></p>
      <p>Address : <%= user.address %></p>
      <p>Manager : <%= user.manager %></p>
      <p>Fixer : <%= user.fixer %></p>
      <p><%= link_to "Delete", user_path(user.id), method: :delete, data: {confirm: "Are you sure?"}, class:"text-danger" %></p>
    </div>
  <% end %>
</div>

<p><%= link_to "Home", root_path, class: "btn btn-primary" %></p>
